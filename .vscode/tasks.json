{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: compile",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "compile"],
      "group": "build",
      "presentation": {
        "panel": "shared",
        "reveal": "silent"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "npm: watch",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "watch"],
      "group": "build",
      "presentation": {
        "panel": "shared",
        "reveal": "never"
      },
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    }
  ]
} 